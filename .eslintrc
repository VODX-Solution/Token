{
  "extends": "standard",
  "env": {
    "mocha": true
  },
  "globals": {
    "assert": false,
    "artifacts": false,
    "contract": false,
    "web3": false
  },
  "plugins": [
    "mocha"
  ],
  "rules": {
    "mocha/no-exclusive-tests": "error",
    "mocha/no-global-tests": "warn",
    "mocha/no-identical-title": "warn",
    "mocha/no-nested-tests": "warn"
  }
}
